{
    "name": "Raspberry Pi Cross Compilation",
    "dockerFile": "Dockerfile",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "ms-vscode.makefile-tools",
                // Assembly support
                "dan-c-underwood.arm",  // ARM Assembly syntax highlighting
                "maziac.asm-code-lens", // Assembly code navigation and references
                "llvm-vs-code-extensions.vscode-clangd", // C/C++ language server
                "xaver.clang-format", // C/C++ code formatter
                // Kernel development helpers
                "ms-vscode.hexeditor", // Binary/hex file viewer
                "jeff-hykin.better-cpp-syntax", // Enhanced C/C++ syntax highlighting
                "streetsidesoftware.code-spell-checker", // Spell checking in comments
                "eamodio.gitlens", // Enhanced Git integration
                "mhutchie.git-graph", // Git history visualization
                "shardulm94.trailing-spaces", // Detect trailing spaces
                "adam-bender.commit-message-editor" // Kernel-style commit messages
            ]
        }
    },
    "remoteUser": "root"
}
